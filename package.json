    "express-sanitizer": "^1.0.5",
    "express-validator": "^5.3.1",
    "forever": "^1.0.0",
    "global-tunnel": "^1.2.0",
    "gridfs-stream": "^1.1.1",
    "jsonwebtoken": "^8.5.1",
    "memory-cache": "^0.2.0",
    "method-override": "^3.0.0",
    "moment": "^2.24.0",
    "mongoose": "^5.6.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.7",
    "uuid": "^3.3.2",
    "xml": "^1.0.1"
  },
