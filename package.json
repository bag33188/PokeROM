  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production forever start server.js",
    "stop": "forever stop server.js",
    "restart": "npm stop && npm start",
    "update-app": "git pull && npm restart",
    "test": "cd tests && bash ./roms.sh && bash ./users.sh && bash ./natures.sh && bash ./ratings.sh && bash ./version.sh && bash ./options.sh",
    "prod": "cd scripts && bash ./production.sh",
    "api": "nodemon server",
    "client": "cd client && ng serve --open && cd ..",
    "db": "cd scripts && bash ./db.sh",
    "db-shell": "mongo",
    "db-prod": "mongo --username admin --password 123456 --authenticationDatabase admin --tls --host server1.pokerom.dev --tlsCertificateKeyFile /etc/ssl/mongodb.pem --tlsCAFile /etc/ssl/mongodb.crt --tlsCertificateKeyFilePassword Broccolini33188",
    "load-db": "mongo --username admin --password 123456 --authenticationDatabase admin --tls --host server1.pokerom.dev --tlsCertificateKeyFile /etc/ssl/mongodb.pem --tlsCAFile /etc/ssl/mongodb.crt --tlsCertificateKeyFilePassword Broccolini33188 \"database/pkmn-roms.js\"",
    "pack": "cd scripts && bash ./package_app.sh",
    "count-files-git": "cd scripts && ruby count_files_git.rb",
    "open-sites": "cd scripts && open_sites.bat",
    "open-repos": "cd scripts && open_repos.bat"
  },
  "private": true,
  "author": "bag33188",
  "license": "ISC",
